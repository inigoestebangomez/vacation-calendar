<mvc:View 
    xmlns:unified="sap.ui.unified" 
    controllerName="vacation.caledar.vacationcalendar.controller.Calendar"
    xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
	height="100%">
    <Page id="page" title="{i18n>title}">
        <PlanningCalendar 
            id="_IDGenPlanningCalendar"
            viewKey="Week"
            appointmentsVisualization="Filled"
            showWeekNumbers="true"
            showRowHeaders="false"
            rows="{vacationModel>/rows}" >
            <rows>
                <PlanningCalendarRow 
                        id="_IDGenPlanningCalendarRow" 
                        icon="{icon}" 
                        title="{title}"
                        text="{cargo}"
                        appointments="{appointments}">
                    <appointments>
                        <unified:CalendarAppointment 
                            id="_IDGenCalendarAppointment" 
                            startDate="{ path: 'startDate', formatter: '.formatDate' }"
                endDate="{ path: 'endDate', formatter: '.formatDate' }"
                            title="{title}"
                            type="{type}">
                        </unified:CalendarAppointment>
                    </appointments>
                </PlanningCalendarRow>
            </rows>
        </PlanningCalendar>
    </Page>
</mvc:View>