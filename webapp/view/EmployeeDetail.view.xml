<mvc:View
    id="_IDGenView"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    controllerName="vacation.caledar.vacationcalendar.controller.EmployeeDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:type="sap.ui.model.type"
    height="100%">
    <Page
        id="employeeDetailPage"
        title="Calendar"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <content>
            <VBox 
                id="_IDGenVBox3"
                justifyContent="Center" 
                alignItems="Center"
                class="customContainer">
                <Text 
                    id="_IDGenText2" 
                    text="{vacationModel>title} vacation details" 
                    class="customTitle"/>
            </VBox>
            <f:SimpleForm
                id="employeeForm"
                layout="ResponsiveLayout"
                width="100%"
                class="-margin--bottom">
                <f:content>
                    <VBox
                        id="_IDGenVBox1"
                        class="sapUiMediumMarginBottom">
                        <Image
                            id="_IDGenImage"
                            src="{vacationModel>icon}"
                            width="15vw"
                            height="auto"
                            class="img--avatar"/>
                        <Title
                            id="_IDGenTitle2"
                            text="{vacationModel>title}"
                            class="customName -margin--bottom"/>
                        <Text
                            id="_IDGenText"
                            text="{vacationModel>cargo}"/>
                    </VBox>
                    
                    <VBox id="_IDGenVBox7" >
                    <Text
                        id="_IDGenLabel4"
                        text="Enjoyed Days:"
                        class="customText -margin--bottom"/>
                    <Text
                        id="_IDGenText3"
                        text="{vacationModel>totalDias} days"
                        class="sapUiSmallMarginBottom"/>
                    <Text
                        id="_IDGenLabel6"
                        text="Total days allowed:"
                        class="customText -margin--bottom"/>
                    <Text
                        id="_IDGenText4"
                        text="{vacationModel>diasRestantes} days"/>
                    </VBox>
                    <List
                        id="_IDGenList"
                        items="{vacationModel>appointments}"
                        noDataText="No vacation periods recorded">
                        <CustomListItem id="_IDGenCustomListItem1">
                            <VBox id="_IDGenVBox2">
                                <Text text="Periods:" class="customText -margin--bottom"/>
                                <Text id="_IDGenText7" text="Start: {path: 'vacationModel>startDate', 
                                type: 'sap.ui.model.type.DateTime', 
                                formatOptions: { pattern: 'dd/MM/yyyy' }}"
                                class="-margin--bottom"/>
                                <Text id="_IDGenText8" text="End: {path: 'vacationModel>endDate', 
                                type: 'sap.ui.model.type.DateTime', 
                                formatOptions: { pattern: 'dd/MM/yyyy' }}"
                                class="-margin--bottom"/>
                            </VBox>
                        </CustomListItem>
                    </List>
                    <VBox
                        id="statsContainer"
                        class="sapUiMediumMarginBottom">
                        <Title
                            id="statsTitle"
                            text="Statistics:"
                            class= "customText -margin--bottom"/>
                        <VBox
                            id="statsBox"
                            justifyContent="SpaceBetween"
                            class="sapUiSmallMarginBottom">
                            <VBox
                                id="usedDaysBox"
                                class="sapUiTinyMarginEnd">
                                <ObjectStatus
                                    id="usedDaysStatus"
                                    title="Enjoyed Days"
                                    text="{statsModel>/diasConsumidos}"
                                    state="Warning"/>
                                <ObjectStatus
                                    id="remainingDaysStatus"
                                    title="Remaining Days"
                                    text="{statsModel>/diasRestantes}"
                                    state="Success"/>
                                <ObjectStatus
                                    id="maxDaysStatus"
                                    title="Total Days Allowed"
                                    text="{statsModel>/diasMaximos}"
                                    state="Information"/>
                            </VBox>
                        </VBox>
                        <ProgressIndicator
                            id="vacationProgress"
                            percentValue="{= ${statsModel>/diasConsumidos} / ${statsModel>/diasMaximos} * 100 }"
                            displayValue="{= ${statsModel>/diasConsumidos} + ' de ' + ${statsModel>/diasMaximos} + ' dÃ­as'}"
                            showValue="true"
                            state="{= ${statsModel>/diasRestantes} > 10 ? 'Success' : 'Warning' }"/>
                    </VBox>
                </f:content>
            </f:SimpleForm>
        </content>
    </Page>
</mvc:View>
